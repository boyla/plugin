<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="topReminder">
        <attr name="leftIcon" format="reference" />
        <attr name="maxLines" format="integer" />
        <attr name="showIcon" format="boolean" />
        <attr name="swipeToDismiss" format="boolean" />
        <attr name="paddingVertical" format="reference" />
        <attr name="paddingHorizontal" format="reference" />
        <attr name="reminderText" format="string" />
        <attr name="reminderTheme">
            <enum name="defaultTheme" value="0" />
            <enum name="warningTheme" value="1" />
            <enum name="errorTheme" value="2" />
            <enum name="successTheme" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="progressCombine">
        <attr name="loadingProgressBarWidth" format="dimension" />
        <attr name="loadingProgressBarHeight" format="dimension" />
        <attr name="loadingBackgroundColor" format="color" />
        <attr name="loadingStateText" format="string" />
        <attr name="loadingStateTextColor" format="color" />
        <attr name="loadingStateDotPlay" format="boolean" />

        <attr name="customLayout" format="reference" />

        <attr name="emptyImageWidth" format="dimension" />
        <attr name="emptyImageHeight" format="dimension" />
        <attr name="emptyTitleTextSize" format="dimension" />
        <attr name="emptyContentTextSize" format="dimension" />
        <attr name="emptyTitleTextColor" format="color" />
        <attr name="emptyContentTextColor" format="color" />
        <attr name="emptyBackgroundColor" format="color" />

        <attr name="errorImageWidth" format="dimension" />
        <attr name="errorImageHeight" format="dimension" />
        <attr name="errorTitleTextSize" format="dimension" />
        <attr name="errorContentTextSize" format="dimension" />
        <attr name="errorTitleTextColor" format="color" />
        <attr name="errorContentTextColor" format="color" />
        <attr name="errorButtonTextColor" format="color" />
        <attr name="errorBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RTextView">

        <!--四周圆角度、左上、右上、左下、右下-->
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_radius_top_left" format="dimension" />
        <attr name="corner_radius_top_right" format="dimension" />
        <attr name="corner_radius_bottom_left" format="dimension" />
        <attr name="corner_radius_bottom_right" format="dimension" />

        <!--虚线边框宽度/间隔-->
        <attr name="border_dash_width" format="dimension" />
        <attr name="border_dash_gap" format="dimension" />

        <!--边框宽度-->
        <attr name="border_width_normal" format="dimension" />
        <attr name="border_width_pressed" format="dimension" />
        <attr name="border_width_unable" format="dimension" />

        <!--边框颜色-->
        <attr name="border_color_normal" format="color" />
        <attr name="border_color_pressed" format="color" />
        <attr name="border_color_unable" format="color" />

        <!--背景颜色-->
        <attr name="background_normal" format="color" />
        <attr name="background_pressed" format="color" />
        <attr name="background_unable" format="color" />

        <!--文本颜色-->
        <attr name="text_color_normal" format="color" />
        <attr name="text_color_pressed" format="color" />
        <attr name="text_color_unable" format="color" />

        <!--图标资源-->
        <attr name="icon_src_normal" format="reference" />
        <attr name="icon_src_pressed" format="reference" />
        <attr name="icon_src_unable" format="reference" />

        <!--图标、大小、位置-->
        <attr name="icon_height" format="dimension" />
        <attr name="icon_width" format="dimension" />
        <attr name="icon_direction">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <!--字体样式-->
        <attr name="text_typeface" format="string" />

    </declare-styleable>

    <!--SuperTextView-->
    <declare-styleable name="SuperTextView">
        <attr name="corner" format="dimension" />
        <attr name="left_top_corner" format="boolean" />
        <attr name="right_top_corner" format="boolean" />
        <attr name="left_bottom_corner" format="boolean" />
        <attr name="right_bottom_corner" format="boolean" />
        <attr name="solid" format="reference|color" />
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="reference|color" />
        <attr name="state_drawable" format="reference" />
        <attr name="state_drawable_width" format="dimension" />
        <attr name="state_drawable_height" format="dimension" />
        <attr name="state_drawable_padding_left" format="dimension" />
        <attr name="state_drawable_padding_top" format="dimension" />
        <attr name="isShowState" format="boolean" />
        <attr name="text_stroke" format="boolean" />
        <attr name="text_stroke_color" format="reference|color" />
        <attr name="text_stroke_width" format="dimension" />
        <attr name="text_fill_color" format="reference|color" />
        <attr name="autoAdjust" format="boolean" />
        <attr name="state_drawable_mode" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
            <enum name="center" value="4" />
            <enum name="fill" value="5" />
            <enum name="leftTop" value="6" />
            <enum name="rightTop" value="7" />
            <enum name="leftBottom" value="8" />
            <enum name="rightBottom" value="9" />
        </attr>
        <attr name="shaderStartColor" format="reference|color" />
        <attr name="shaderEndColor" format="reference|color" />
        <attr name="shaderMode" format="enum">
            <enum name="topToBottom" value="0" />
            <enum name="bottomToTop" value="1" />
            <enum name="leftTopRight" value="2" />
            <enum name="rightToLeft" value="3" />
        </attr>
        <attr name="shaderEnable" format="boolean" />
        <attr name="pressBgColor" format="reference|color" />
        <attr name="pressTextColor" format="reference|color" />
    </declare-styleable>
</resources>