<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background_light"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:padding="10dp">

    <top.wifistar.view.CircleImageView
        android:id="@+id/imageView_avatar"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:civ_border_width="1.2dp" />

    <LinearLayout
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_username"
                style="@style/message_list_item_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Bill Gates" />

            <TextView
                android:id="@+id/tvWiFi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/textview_username"
                android:background="@drawable/text_bg_blue"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="WiFi"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <LinearLayout
                android:id="@+id/linearlayout_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/text_hint_color"
                    android:textSize="13sp"
                    tools:text="16:52" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/message_send_failed"
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_marginRight="10dp"
                android:background="@drawable/send_failed_button"
                android:gravity="right|center"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textview_content"
                style="@style/message_list_item_summary_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:linksClickable="false"
                android:paddingRight="10dp"
                android:singleLine="true"
                tools:text="please help me" />

            <TextView
                android:id="@+id/message_item_has_new_message"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/redminipoint"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="9sp" />
            <!--
            android:visibility="gone"
            -->

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
