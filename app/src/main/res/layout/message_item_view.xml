<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_item"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:background="@drawable/item_background_light"
    android:minHeight="?attr/listPreferredItemHeight"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingLeft="5dp"
    android:paddingTop="3dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/mrlHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imageView_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/message_item_has_new_message"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentTop="@id/imageView_avatar"
                android:layout_alignRight="@id/imageView_avatar"
                android:layout_marginRight="-5dp"
                android:background="@drawable/redminipoint"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="9dp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/textview_username"
                style="@style/message_list_item_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Bill Gates" />

            <ImageView
                android:id="@+id/imageview_gender"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/textview_username"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:id="@+id/linearlayout_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/text_hint_color"
                    android:textSize="13sp"
                    tools:text="Yesterday" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/message_send_failed"
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_marginRight="10dp"

                android:background="@drawable/send_failed_button"
                android:gravity="right|center"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textview_content"
                style="@style/message_list_item_summary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:paddingTop="5dip"
                android:singleLine="true"
                android:linksClickable="false"
                android:paddingRight="10dp"
                tools:text="please help me" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
